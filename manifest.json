{
  "manifest_version": 3,
  "name": "LangAi: Smart ai instant translator",
  "short_name": "LangAi",
  "description": "Instantly Translate any text to any language.",
  "version": "1.0.0",

  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "scripting",
    "tabs"
  ],
 
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Right Click Action",
    "default_popup":"popup.html"
  },
  "side_panel": {"default_path":"sidepanel.html"}
}
