{
  "manifest_version": 3,
  "name": "SmartAI: Smart ai instant translator",
  "short_name": "SmartAI",
  "description": "Instantly turn any text into any other language. AI writing assistant",
  "version": "1.0.0",

  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Right Click Action"
  },
  "side_panel": {"default_path":"sidepanel.html"}
}
